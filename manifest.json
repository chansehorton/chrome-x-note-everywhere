{
  "manifest_version": 2,

  "name": "chrome_page_notes",
  "description": "this extension adds a movable, resizeable yellow box on top of the existing page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Show/Hide Note"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
        ],
      "css": ["ch_note_styles.css"],
      "js": [
        "jquery-3.1.1.slim.min.js",
        "toggle.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "ch_note_styles.css",
    "toggle.js"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
