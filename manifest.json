{
  "manifest_version": 2,

  "name": "notes-everywhere",
  "description": "Adds a notepad to every page you visit and saves any text you input so you can access them on return visits. Has speech to text and copy to clipboard functionality.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "/img/Edit-50.png",
    "default_title": "Show/Hide Note"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
        ],
      "css": [
        "/css/ch_note_styles.css"
      ],
      "js": [
        "/js/jquery-3.1.1.slim.min.js",
        "/js/toggle.js",
        "/js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["/js/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
